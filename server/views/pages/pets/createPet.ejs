<!DOCTYPE html>
<html lang="en">

<%- include('../../partials/head'); %>

     <body class="background-radial-gradient overflow-auto">
          <%- include('../../partials/header'); %>

               <main class="container px-md-5 my-3">
                    <div class="row justify-content-center gx-lg-5 align-items-center mb-5">
                         <div class="col-lg-7 mb-5 mb-lg-0 position-relative">
                              <div class="h6 mb-3"><a href="/pets">
                                        < Go Back</a>
                              </div>
                              <div class="display-6 mb-3">New Pet</div>


                              <div class="card login-card">
                                   <div class="card-body" id="login-card-body" px-3 py-4 px-md-4">
                                        <form class="" action="/pets/create" method="POST"
                                             encType="application/x-www-form-urlencoded">

                                             <div class="row mb-4">
                                                  <div class="col-md-6">
                                                       <div class="form-outline">

                                                            <label class="form-label mb-2">Type</label>
                                                            <!-- <input required type="text"
                                                                 class="form-control form-control-sm" value="dog"
                                                                 name="type" /> -->

                                                            <select name="type" class="form-select form-select-sm"
                                                                 aria-label="selectType">
                                                                 <option selected value="dog">Dog</option>
                                                                 <option value="cat">Cat</option>
                                                                 <option value="lion">Lion</option>
                                                                 <option value="parrot">Parrot</option>
                                                                 <option value="fish">Fish</option>
                                                                 <option value="rabbit">Rabbit</option>
                                                                 <option value="snake">Snake</option>
                                                            </select>




                                                       </div>
                                                  </div>

                                                  <div class="col-md-6">
                                                       <div class="form-outline">
                                                            <label class="form-label mb-2">name</label>
                                                            <input required type="text" value="Snow"
                                                                 class="form-control form-control-sm" minlength="3"
                                                                 minlength="32" id="petName" name="name" />
                                                       </div>
                                                  </div>
                                             </div>
                                             <div class="row mb-4">
                                                  <div class="col-md-6">
                                                       <div class="form-outline">
                                                            <label class="form-label mb-2">Gender</label>

                                                            <select name="gender" class="form-select form-select-sm"
                                                                 aria-label="Pet Gender">

                                                                 <option value="male">
                                                                      Male
                                                                 </option>
                                                                 <option value="female">
                                                                      Female
                                                                 </option>
                                                            </select>
                                                       </div>
                                                  </div>

                                                  <div class="col-md-6">
                                                       <div class="form-outline">
                                                            <label class="form-label mb-2">Age</label>
                                                            <input required type="number" value="5"
                                                                 class="form-control form-control-sm" minlength="1"
                                                                 minlength="100" id="petAge" name="age" />
                                                       </div>
                                                  </div>
                                             </div>

                                             <div class="row mb-4">
                                                  <div class="col-md-6">
                                                       <div class="form-outline">
                                                            <label class="form-label mb-2">Color</label>
                                                            <input required type="text"
                                                                 class="form-control form-control-sm" value="White"
                                                                 name="color" />
                                                       </div>
                                                  </div>

                                                  <div class="col-md-6">
                                                       <div class="form-outline">
                                                            <label class="form-label mb-2">Owner</label>
                                                            <select name="owner" class="form-select form-select-sm"
                                                                 aria-label="Default select example">
                                                                 <% users.forEach(user=> {%>
                                                                      <option value="<%= user._id%>">
                                                                           <%= user.username %>
                                                                      </option>
                                                                      <%}) %>
                                                            </select>
                                                            <div id="passwordHelpBlock" class="form-text">
                                                                 Select the pet's owner.
                                                            </div>
                                                       </div>
                                                  </div>
                                             </div>

                                             <!-- Checkbox -->
                                             <div class="form-check mb-4">
                                                  <input class="form-check-input" type="checkbox" name="isVegetarian"
                                                       value="true" checked />
                                                  <label class="form-check-label">
                                                       is Vegetarian
                                                  </label>
                                             </div>

                                             <!-- Submit button -->
                                             <button type="submit" class="btn btn-primary btn-block">
                                                  Create
                                             </button>

                                             <a href="/pets">
                                                  <button type="button" class="btn btn-default btn-block">
                                                       Cancel
                                                  </button>
                                             </a>
                                        </form>
                                   </div>
                              </div>


                         </div>
                    </div>
               </div>

     </body>
     <div class="login-footer">
          <%- include('../../partials/footer'); %>
     </div>


</html>